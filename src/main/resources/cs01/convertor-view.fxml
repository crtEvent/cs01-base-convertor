<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootContainer" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
  minHeight="-Infinity"
  minWidth="-Infinity" prefHeight="346.0" prefWidth="284.0" xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs01.controller.javafx.FxConvertorController">
  <children>
    <Label fx:id="dialogTitle" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER"
      VBox.vgrow="ALWAYS">
      <font>
        <Font name="System Bold" size="20.0"/>
      </font>
      <VBox.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </VBox.margin>
    </Label>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <children>
        <Label id="param1Label" alignment="CENTER" maxWidth="100.0" minWidth="60.0"
          textAlignment="CENTER">
          <font>
            <Font name="System Bold" size="18.0"/>
          </font>
          <HBox.margin>
            <Insets left="10.0" right="10.0"/>
          </HBox.margin>
        </Label>
        <TextField fx:id="param1" HBox.hgrow="ALWAYS">
          <HBox.margin>
            <Insets right="10.0"/>
          </HBox.margin>
        </TextField>
      </children>
    </HBox>
    <Label text="⬇︎">
      <font>
        <Font name="System Bold" size="50.0"/>
      </font>
    </Label>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <children>
        <Label id="resultLabel" alignment="CENTER" maxWidth="100.0" minWidth="60.0">
          <font>
            <Font name="System Bold" size="18.0"/>
          </font>
          <HBox.margin>
            <Insets left="10.0" right="10.0"/>
          </HBox.margin>
        </Label>
        <TextField fx:id="result" HBox.hgrow="ALWAYS">
          <HBox.margin>
            <Insets right="10.0"/>
          </HBox.margin>
        </TextField>
      </children>
    </HBox>
    <Label fx:id="errorMessageLabel" alignment="CENTER" contentDisplay="CENTER" minHeight="30.0"
      textAlignment="CENTER" textFill="RED" VBox.vgrow="ALWAYS">
      <font>
        <Font size="14.0"/>
      </font>
    </Label>
    <Button onAction="#onClose" mnemonicParsing="false" text="Close" textAlignment="CENTER">
      <font>
        <Font size="14.0"/>
      </font>
      <VBox.margin>
        <Insets bottom="10.0" top="10.0"/>
      </VBox.margin>
    </Button>
  </children>
</VBox>
